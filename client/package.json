{
	"name": "ruby-lsp",
	"displayName": "ruby-lsp",
	"description": "VSCode support for the ruby-lsp gme",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/Shopify/ruby-lsp.git"
	},
	"license": "MIT",
	"engines": {
		"vscode": "^1.64.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:ruby",
		"workspaceContains:Gemfile.lock"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ruby-lsp.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"package": "vsce package",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.64.0",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5",
		"vsce": "^2.6.7"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	}
}
